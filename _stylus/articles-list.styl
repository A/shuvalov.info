.articles-list
  position relative

.articles-list__title
  position absolute
  left -112px
  display block
  width 64px
  text-align center
  color color__dark

.articles-list__label
  color #736750
  font-family font__italic
  font-style italic
  font-size .8rem
  padding 4px 4px 2px
  background-color #fff
  box-shadow shadow__tiny
  background linear-gradient(top, #f0f0f0 0%, #f5f5f5 5%, #fff 20%)

.articles-list__link
  text-decoration none
  color inherit
  &:hover
    color color__blue
    text-decoration underline

.articles-list__description
  color color__subdued
  font-size .9rem
  font-family font__base

